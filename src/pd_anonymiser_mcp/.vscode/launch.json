{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run pd-anonymiser MCP Server",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/pd_anonymiser_mcp/server.py",
      "console": "integratedTerminal",
      "args": [
        "--transport", "streamable-http",
        "--host", "0.0.0.0",
        "--port", "8000"
      ],
      "env": {
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
      },
      "cwd": "${workspaceFolder}",
      "justMyCode": true
    }
  ]
}
